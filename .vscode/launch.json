//
// vex Project: Configurazione Debug VSCode (Launch)
//
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(lldb) Launch vex",
      "type": "lldb",
      "request": "launch",
      // Programma da eseguire (compilato dal Makefile)
      "program": "${workspaceFolder}/vex",
      "args": [],
      "cwd": "${workspaceFolder}",
      // Esegue il task "build" prima di avviare il debug
      "preLaunchTask": "build (make)"
    }
  ]
}
